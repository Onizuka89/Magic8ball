<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.stiandrobak.magic8ball.app.MainActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:src="@drawable/magic_eight_ball" android:cropToPadding="false" android:paddingBottom="0dp"/>

    <TextView
        android:text="Ask me a question young one."
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:id="@+id/message"
        android:textSize="13dp"
        android:gravity="center"
        android:layout_centerVertical="true" android:layout_centerHorizontal="true" android:textColor="#ffffff"
        android:paddingBottom="7dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch" android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
        android:id="@+id/swap"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
